#include <iostream>
using namespace std;

float solve( int P, int T, float R ) {
   float si;
   si = (P * T * R) / 100;
   return si;
}

int main() {
   int P = 10000;
   int T = 7;
   float R = 6.25;
   cout << "Simple interest for 10,000 with ROI 6.25\% for 7 years is: ";
   float result;
   result = solve( P, T, R );
   cout << result << endl;
   cout << "Total amount is: " << P + result;
   return 0;
}
